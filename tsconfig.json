{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "tests/**/*",
    "helpers/**/*",
    "page-objects/**/*",
    "fixtures/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report"
  ]
}
